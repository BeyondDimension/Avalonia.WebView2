<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net461;netcoreapp3.0;net5.0;net5.0-windows;net6.0;net6.0-windows</TargetFrameworks>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<RootNamespace>Avalonia.Controls</RootNamespace>
		<PackageId>WebView2.Avalonia</PackageId>
		<Description>
			The WebView2 control enables you to embed web technologies (HTML, CSS, and JavaScript) in your native applications powered by Microsoft Edge (Chromium).
			This package is necessary for Avalonia applications. To learn more about package versions checkout https://aka.ms/wv2-packageversion. To learn best practices checkout: https://aka.ms/wv2-bestpractices.
		</Description>
		<PackageTags>Web WebView Native native package Edge avalonia avaloniaui dotnet framework core Webview2</PackageTags>
		<Version>1.0.1264.42-preview.220710.1</Version>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(Configuration)'=='Release' ">
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
		<DefineConstants>DISABLE_WEBVIEW2_CORE;$(DefineConstants)</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Avalonia" />
		<PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('net4')) ">
		<PackageReference Include="WebView2.NativeAssets.Win32" />
		<!--<Reference Include="Microsoft.Web.WebView2.Core">
			<HintPath>..\..\ref\Microsoft.Web.WebView2\lib\net45\Microsoft.Web.WebView2.Core.dll</HintPath>
		</Reference>-->
	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('netcoreapp')) OR $(TargetFramework.StartsWith('net5')) OR $(TargetFramework.StartsWith('net6')) ">
		<PackageReference Include="WebView2.NativeAssets.Win32" />
		<!--<Reference Include="Microsoft.Web.WebView2.Core">
			<HintPath>..\..\ref\Microsoft.Web.WebView2\lib\netcoreapp3.0\Microsoft.Web.WebView2.Core.dll</HintPath>
		</Reference>-->
	</ItemGroup>

</Project>
